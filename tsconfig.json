{
    "compilerOptions": {
        "outDir": "app/dist/js", // pasta onde serao destinados os arquivos JS apos transpilacao
        "target": "ES6", // Versao do ECMAScript que sera suportada (igual ou superior)
        "noEmitOnError": true, // Nao gera o arquivo json enquanto o arquivo ts estiver dando erro
        "noImplicitAny": true, // Impede que variaveis, funcoes e qlqr outra coisa seja tipada como any implicitamente
        "removeComments": true,
        "strictNullChecks": true, // Faz com que o ts realize checagens de possiveis retornos nulos
        "experimentalDecorators": true, // Usando decorator
        "sourceMap": true // Faz com que sabemos a respectiva linha gerada de JS no TS
    },
    "include": ["app/**/*"] // Inclui toda subpasta e qualquer arquivo que estiver dentro de app
}